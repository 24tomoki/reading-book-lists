<h1>cards edit</h1>
<p>＊『<%= @card.title %>』の内容を編集します。</p>
<%= form_for(@card, url:{controller:"cards", action:"edit", id:"@card.id"}) do |form| %>
    <div class="form-group">
        <label for="title">タイトル</label>
        <%= form.text_field :title,{class:"control"} %>
    </div>
    <div class="form-group">
        <label for="author">著者</label>
        <%= form.text_field :author,{class:"control"} %>
    </div>
    <div class="form-group">
        <label for="price">価格</label>
        <%= form.text_field :price,{class:"control"} %>
    </div>
    <div class="form-group">
        <label for="pubulisher">出版社</label>
        <%= form.text_field :pubulisher,{class:"control"} %>
    </div>
    <div class="form-group">
        <label for="memo">コメント</label>
        <%= form.text_area :memo,{class:"control"} %>
    </div>
    <%= form.submit "更新" %>
<% end %>
<p>
    <a href="/cards">
        &lt;&lt;※トップページに戻る
    </a>
</p>